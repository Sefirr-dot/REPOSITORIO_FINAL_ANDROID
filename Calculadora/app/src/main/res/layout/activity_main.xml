<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A5D997"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtNum2"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="@string/segundoNumero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.161" />

    <TextView
        android:id="@+id/txtNum"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="@string/resultado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.258" />

    <TextView
        android:id="@+id/txtNum1"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="@string/primerNumero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <EditText
        android:id="@+id/etxtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/primerNumero"
        android:inputType="number|numberDecimal"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="38dp" />

    <EditText
        android:id="@+id/etxtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/segundoNumero"
        android:inputType="number|numberDecimal"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="101dp" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="112dp"
        android:layout_height="56dp"
        android:text="TextView"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="176dp" />

    <TextView
        android:id="@+id/txtModuloDivision"
        android:layout_width="106dp"
        android:layout_height="28dp"
        android:text="TextView"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="515dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="101dp"
        android:layout_height="25dp"
        android:text="@string/resto"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="518dp" />

    <Button
        android:id="@+id/btSuma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/suma"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="268dp" />

    <Button
        android:id="@+id/btResta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resta"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="325dp" />

    <Button
        android:id="@+id/btDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/division"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="383dp" />

    <Button
        android:id="@+id/btMultiplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/multiplicacion"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="440dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="348dp"
        android:layout_height="425dp"
        app:srcCompat="@drawable/calculadora"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="214dp" />

</androidx.constraintlayout.widget.ConstraintLayout>