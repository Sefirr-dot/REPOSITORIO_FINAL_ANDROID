<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VentanaAux">

    <TextView
        android:id="@+id/txtHorasEstu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Horas de estudio:"
        app:layout_constraintStart_toStartOf="@+id/txtEspecialidadess"
        app:layout_constraintTop_toBottomOf="@+id/txtEspecialidadess" />

    <Button
        android:id="@+id/btVolver"
        android:layout_width="197dp"
        android:layout_height="87dp"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.906" />

    <TextView
        android:id="@+id/txtNombre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="49dp"
        android:text="Nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtEspecialidadess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Especialidad"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtEspee"
        app:layout_constraintStart_toStartOf="@+id/txtSistemaPref" />

    <TextView
        android:id="@+id/txtSistemaPref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Sistema Preferido:"
        app:layout_constraintStart_toStartOf="@+id/txtNombre2"
        app:layout_constraintTop_toBottomOf="@+id/txtNombre2" />

    <TextView
        android:id="@+id/txtNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/txtSistemaPref"
        app:layout_constraintStart_toEndOf="@+id/txtNombre2" />

    <TextView
        android:id="@+id/txtSists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtSistemaPref"
        app:layout_constraintStart_toEndOf="@+id/txtSistemaPref" />

    <TextView
        android:id="@+id/txtEspee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toEndOf="@+id/txtEspecialidadess"
        app:layout_constraintTop_toBottomOf="@+id/txtSistemaPref" />

    <TextView
        android:id="@+id/txtHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtHorasEstu"
        app:layout_constraintStart_toEndOf="@+id/txtHorasEstu" />
</androidx.constraintlayout.widget.ConstraintLayout>